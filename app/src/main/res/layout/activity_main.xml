<?xml version="1.0" encoding="utf-8"?>
<RadioGroup
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewMeuCafe"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="#0000ff"
        android:text="Meu Café"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup

        android:id="@+id/radioGroup1"
        android:layout_below="@+id/textViewMeuCafe"
        android:layout_marginTop="25dp"
        android:layout_gravity="center">

        <RadioButton
            android:id="@+id/RadioButtonCafe"
            android:onClick="addCafe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Café                      R$2,00"
            android:textAppearance="?android:textAppearanceMedium" />

        <RadioButton
            android:id="@+id/RadioButtonCafeComLeite"
            android:onClick="addCafeComLeite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Café com Leite    R$3,00"
            android:textAppearance="?android:textAppearanceMedium" />

        <RadioButton
            android:id="@+id/RadioButtonCapuccino"
            android:onClick="addCapuccino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Capuccino            R$3,00"
            android:textAppearance="?android:textAppearanceMedium" />


    </RadioGroup>

    <Button
        android:id="@+id/buttonMais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_weight="10dp"
        android:text="+"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/textViewCont"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_weight="1dp"
        android:text="0"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="50dp" />

    <Button
        android:id="@+id/buttonMenos"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_weight="10dp"
        android:text="-"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/textViewValorTotal"
        android:layout_width="369dp"
        android:layout_height="38dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_weight="40dp"
        android:text="PREÇO TOTAL:"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textViewPedido"
        android:layout_width="369dp"
        android:layout_height="38dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_weight="40dp"
        android:text="Seu pedido é..."
        android:textColor="#000000"
        android:textSize="20dp" />

    <Button
        android:id="@+id/buttonFazerPedido"
        android:background="#0000ff"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:text="Fazer pedido"
        android:textSize="30dp"
        android:textColor="#ffffff"/>

</RelativeLayout>